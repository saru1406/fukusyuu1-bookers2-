<div class="row">
  <%= render 'books/sidebar', user: @user, book: @book_new %>
  <div class="col-lg-8 offset-lg-1">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_image %></td>
          <td><%= user.name %></td>
          <td><%= link_to "show", user_path(user.id) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>